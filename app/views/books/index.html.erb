<h1>Books</h1>
	<table>
		<thead>
		<tr>
			<th>Title</th><th>Body</th><th></th>
		</tr>
		</thead>

		<tbody>
			<% @books.each do |book| %>
			<tr>
				<td><%= book.title %>
				</td>
				<td><%= book.body %>
				</td>
				<td><%= link_to"Show",book_path(book.id), class: "show_#{book.id}" %>
				</td>
				<td><%= link_to"Edit",edit_book_path(book.id), class: "edit_#{book.id}" %>
				</td>
				<td><%= link_to"Destory",book_path(book.id), 
					class: "destroy_#{book.id}",
					method: :delete,
				    "data-confirm" => "本当に削除しますか？" 
				    %>
				</td>
			</tr>
			<% end %>
		</tbody>
	</table>

<h1>New Book</h1>
<%= form_for(@book) do |f| %>
	<p>title</p>
	<%= f.text_field:title, class: "book_title" %>
	<p>body</p>
	<%= f.text_area:body, class: "book_body" %>
	<%= f.submit 'create book' %>
<% end %>
